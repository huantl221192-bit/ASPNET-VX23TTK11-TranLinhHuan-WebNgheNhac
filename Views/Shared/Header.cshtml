<div class="ms-header-logo">
    <img width="120" src="~/Content/Images/logo.svg" />
</div>

@if (Session["userId"] == null)
{
    <div class="ms-header-dangnhap">
        @Html.ActionLink("Đăng nhập", "Login", "Home")
    </div>
}
else
{
    <div class="ms-dadangnhap">
        <span>Chào bạn @Session["fullname"]</span>
        <div class="dropdown">
            <button class="btn dropdown-toggle" type="button" data-toggle="dropdown" style="background-color:#5743bd;">
                <i class="fa fa-bars" aria-hidden="true"></i>
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu dropdown-menu-right">
                <li><a href="#">Đổi mật khẩu</a></li>
                <li><a href="#">Xem thông tin cá nhân</a></li>
                <li>@Html.ActionLink("Bài hát yêu thích", "Favorite", "Favorite")</li>
                <li>@Html.ActionLink("Thoát","Logout","Home")</li>
            </ul>
        </div>
    </div>
}
